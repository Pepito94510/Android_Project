<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#6D6875"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Connexion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Connexion"
            android:textSize="25dp"
            android:textColor="#FFFFFF"/>

        <EditText
            android:id="@+id/Mail"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="#514E57"
            android:inputType="textEmailAddress"
            android:hint="Email" />

        <EditText
            android:id="@+id/Password"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="#514E57"
            android:inputType="textPassword"
            android:hint="Mot de passe" />

        <Button
            android:id="@+id/Connexion"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#FFCDB2"
            android:layout_marginTop="80dp"
            android:text="Connexion"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/info"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pas encore inscrit ?"
            android:textAlignment="center"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/Inscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFCDB2"
            android:text="Inscrivez-vous"
            android:textAlignment="center"
            android:textColor="#000000"
            app:backgroundTint="#FFCDB2"
            app:rippleColor="#FFCDB2"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>